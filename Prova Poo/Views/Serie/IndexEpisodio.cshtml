@model IEnumerable<Prova_Poo.Model.episodio>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = null;
}


<h3>Episodios relacionado : </h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.NumeroEpisodio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.NumeroEpisodio)
        </td>

        <td>
            <a href="@Url.Action("Edit","Episodio", new { id = item.Id})" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
            <a href="@Url.Action("Delete","Episodio", new { id = item.Id})" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
        </td>
    </tr>
    }

</table>
